@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>

    <form action="http://localhost:50146/Home/AddProduct">
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Nazwa</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" placeholder="Wpisz nazwę produktu">
            </div>
        </div>
        <div class="form-group row">
            <label for="calories" class="col-sm-2 col-form-label">Kalorie</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="calories" placeholder="Na 100 gram">
            </div>
        </div>

        <button type="submit" class="btn"> Dodaj Produkt </button>
    </form>

</div>